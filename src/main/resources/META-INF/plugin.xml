<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>io.kadena.pact</id>
    <name>Pact</name>
    <vendor>Kadena</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.ultimate</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- File Type -->
        <fileType
                name="Pact File"
                implementationClass="io.kadena.pact.language.PactFileType"
                fieldName="INSTANCE"
                language="Pact"
                extensions="pact"/>

        <!-- Application Settings -->
        <applicationService
                serviceImplementation="io.kadena.pact.ide.settings.AppSettingsState"/>

        <applicationConfigurable
                parentId="language"
                instance="io.kadena.pact.ide.settings.AppSettingsConfigurable"
                id="io.kadena.pact.ide.settings.AppSettingsConfigurable"
                displayName="Pact"/>

        <!-- Parser -->
        <lang.parserDefinition
                language="Pact"
                implementationClass="io.kadena.pact.language.PactParserDefinition"/>

        <!-- Syntax Highlighter -->
        <lang.syntaxHighlighterFactory
                language="Pact"
                implementationClass="io.kadena.pact.ide.highlighting.PactSyntaxHighlighterFactory"/>

        <!-- Language Server (LSP) -->
        <platform.lsp.serverSupportProvider
                implementation="io.kadena.pact.lsp.PactLspServerSupportProvider"/>
    </extensions>
</idea-plugin>
