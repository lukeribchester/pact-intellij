<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>io.kadena.pact.intellij</id>
    <name>Pact</name>
    <vendor>Kadena</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="io.kadena.pact.intellij.services.MyApplicationService"/>
        <projectService serviceImplementation="io.kadena.pact.intellij.services.MyProjectService"/>

        <fileType
                name="Pact File"
                implementationClass="io.kadena.pact.intellij.PactFileType"
                fieldName="INSTANCE"
                language="Pact"
                extensions="pact"
        />

        <lang.parserDefinition
            language="Pact"
            implementationClass="io.kadena.pact.intellij.language.PactParserDefinition"/>

        <lang.syntaxHighlighterFactory
                language="Pact"
                implementationClass="io.kadena.pact.intellij.language.PactSyntaxHighlighterFactory"
        />

        <colorSettingsPage
                implementation="io.kadena.pact.intellij.language.PactColorSettingsPage"/>
    </extensions>

    <applicationListeners>
        <listener class="io.kadena.pact.intellij.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
